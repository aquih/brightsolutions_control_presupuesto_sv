<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<data>

		<record id="purchase_order_line_view_tree" model="ir.ui.view">
			<field name="name">purchase.order.line.view.tree</field>
			<field name="model">purchase.order.line</field>
			<field name="arch" type="xml">
				<list string="">
					<field name="order_id" />
					<field name="date_approve" />
					<field name="partner_id" />
					<field name="product_uom_qty" />
					<field name="price_unit" />
					<field name="taxes_id" widget="many2many_tags" />
					<field name="price_subtotal" />
					<field name="auth_state" widget="badge" />
					<button string="Autorizar" name="btn_auth" type="object" class="btn-success" invisible="auth_state != 'pendiente'"  groups="brightsolutions_control_presupuesto.group_purchase_lines_auth"/>
				</list>
			</field>
		</record>


		<record id="purchase_order_lines_to_auth_action" model="ir.actions.act_window">
			<field name="name">Lineas por autorizar</field>
			<field name="res_model">purchase.order.line</field>
			<field name="view_mode">list,form</field>
			<field name="view_id" ref="purchase_order_line_view_tree"/>
			<field name="domain">[('auth_state', '=', 'pendiente')]</field>
		</record>

	</data>


</odoo>
